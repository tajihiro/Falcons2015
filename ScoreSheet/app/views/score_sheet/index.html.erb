<!-- Game Navi -->
<%= render partial: 'application/games_navi' %>
<!--// Game Navi -->

<p></p>

<!-- Game Table-->
<div style="text-align: right">
  <%= link_to score_sheet_edit_path(season_id:@game.season_id, game_id:@game.id) do%>
      <span class="label label-info">
            <span class="glyphicon glyphicon-edit" aria-hidden="true">Edit</span>
      </span>
  <% end %>
</div>
<h4>Game <%= @game.game_name %></h4>
<div>
    <div class="row">
        <div class="col-md-12">
          <table class="table table-bordered">

            <thead>
            <tr>
              <th colspan="2">Date : <%= @game.game_date %></th>
              <th colspan="3">Time : <span><%= @game.game_time %></span></th>
              <th colspan="3">
                <% if @game.game_type_id == 1 %>
                    <span class="glyphicon glyphicon-tag" aria-hidden="true"></span>
                    Season Game
                <% else %>
                    <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
                    Play Off Game
                <% end%>
              </th>
              <th colspan="4">Place : <%= @game.game_place %></th>
            </tr>
            <tr>
              <th colspan="12">Div :
                <%= @game.division.division_name %>
              </th>
            </tr>
            <tr>
              <th style="text-align: center">Goal</th>
              <th colspan="2" style="text-align: center">Team</th>
              <th style="text-align: center">1</th>
              <th style="text-align: center">2</th>
              <th style="text-align: center">OT</th>
              <th style="text-align: center">Total(P)</th>
              <th style="text-align: center">SOG</th>
              <th style="text-align: center">1</th>
              <th style="text-align: center">2</th>
              <th style="text-align: center">OT</th>
              <th style="text-align: center">Total(S)</th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <th>Visitor</th>
              <!--Away Team-->
              <td colspan="2">
                <%= @game.away_team.team_name %>
              </td>
              <!--1-->
              <td style="text-align: right">
                <%= @game.away_team_p1_score %>
              </td>
              <!--2-->
              <td style="text-align: right">
                <%= @game.away_team_p2_score %>
              </td>
              <!--OT-->
              <td style="text-align: right">
                <%= @game.away_team_ot_score %>
              </td>
              <!--Total(P)-->
              <td style="text-align: right">
                <%= @game.away_team_score %>
              </td>
              <!--SOG-->
              <td style="text-align: center">-</td>
              <!--1-->
              <td style="text-align: right">
                <%= @game.away_team_p1_shots %>
              </td>
              <!--2-->
              <td style="text-align: right">
                <%= @game.away_team_p2_shots %>
              </td>
              <!--OT-->
              <td style="text-align: right">
                <%= @game.away_team_ot_shots %>
              </td>
              <!--Total(S)-->
              <td style="text-align: right">
                <%= @game.away_team_shots %>
              </td>
            </tr>
            <tr>
              <th>Home</th>
              <!--Home Team-->
              <td colspan="2">
                <%= @game.home_team.team_name %>
              </td>
              <!--1-->
              <td style="text-align: right">
                <%= @game.home_team_p1_score %>
              </td>
              <!--2-->
              <td style="text-align: right">
                <%= @game.home_team_p2_score %>
              </td>
              <!--OT-->
              <td style="text-align: right">
                <%= @game.home_team_ot_score %>
              </td>
              <!--Total(P)-->
              <td style="text-align: right">
                <%= @game.home_team_score %>
              </td>
              <!--SOG-->
              <td style="text-align: center">-</td>
              <!--1-->
              <td style="text-align: right">
                <%= @game.home_team_p1_shots %>
              </td>
              <!--2-->
              <td style="text-align: right">
                <%= @game.home_team_p2_shots %>
              </td>
              <!--OT-->
              <td style="text-align: right">
                <%= @game.home_team_ot_shots %>
              </td>
              <!--Total-->
              <td style="text-align: right">
                <%= @game.home_team_shots %>
              </td>
            </tr>
            </tbody>
          </table>
        </div>
    </div>
</div>
<!--// Game Table-->


<!-- Roster Table-->
<h4>Roster</h4>
<div>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-bordered table-striped">
          <thead>
          <tr>
            <th style="text-align: center">#</th>
            <th style="text-align: center">Pos.</th>
            <th style="text-align: center">Name</th>
            <th style="text-align: center">前半</th>
            <th style="text-align: center">後半</th>
            <th style="text-align: center">OT</th>
            <th style="text-align: center">MVP</th>
          </tr>
          </thead>
          <!--Goalie-->
          <tbody>
          <% @game_goalies.each do |goalie| %>
              <tr>
                <!-- # -->
                <td style="text-align: center">
                  <%= goalie.member.jersey_number %>
                </td>
                <!-- G -->
                <td style="text-align: center"><%= goalie.member.position.position_name %></td>
                <!-- Name -->
                <td><span><%= goalie.member.member_name %></span></td>
                <!-- 前半 -->
                <td style="text-align: right">
                  <%= goalie.goal_against %>/
                  <%= goalie.shots_against %>
                </td>
                <!-- 後半 -->
                <td style="text-align: right">
                  <%= goalie.goal_against %>/
                  <%= goalie.shots_against %>
                </td>
                <!-- OT -->
                <td style="text-align: right">
                  <%= goalie.goal_against %>/
                  <%= goalie.shots_against %>
                </td>
                <!-- MVP -->
                <td style="text-align: center">
                  <% if goalie.mvp_flg == 0 %>
                  <span class="label label-default">
                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                  </span>
                  <% else %>
                  <span class="label label-warning">
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                  </span>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
          <!--//Goalie-->

          <!--Player-->
          <thead>
          <tr>
            <th style="text-align: center">#</th>
            <th style="text-align: center">Pos.</th>
            <th style="text-align: center">Name</th>
            <th style="text-align: center">G</th>
            <th style="text-align: center">A</th>
            <th style="text-align: center">P</th>
            <th style="text-align: center">MVP</th>
          </tr>
          </thead>
          <tbody>
          <% @game_players.each do |player| %>
          <tr>
            <!-- # -->
            <td style="text-align: center">
              <%= player.member.jersey_number %>
            </td>
            <!-- Pos. -->
            <td style="text-align: center">
              <span><%= player.member.position.position_name %></span>
            </td>
            <!-- Name -->
            <td>
              <span><%= player.member.member_name %></span>
            </td>
            <!-- G -->
            <td style="text-align: right">
              <%= player.goal %>
            </td>
            <!-- A -->
            <td style="text-align: right">
              <%= player.assist %>
            </td>
            <!-- P -->
            <td style="text-align: right">
              <%= player.penalties %>
            </td>
            <!-- MVP -->
            <td style="text-align: center">
              <% if player.mvp_flg == 0 %>
                  <span class="label label-default">
                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                  </span>
              <% else %>
                  <span class="label label-warning">
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                  </span>
              <% end %>
            </td>
          </tr>
          <% end %>
          </tbody>
          <!--//Player-->
        </table>
      </div>
    </div>
</div>
<!--// Roster Table-->

<!-- Goals Table-->
<h4>Goals</h4>
<div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                      <th style="text-align: center">Half</th>
                      <th style="text-align: center">Time</th>
                      <th style="text-align: center">G</th>
                      <th style="text-align: center">Name</th>
                      <th style="text-align: center">A</th>
                      <th style="text-align: center">Name</th>
                      <th style="text-align: center">A</th>
                      <th style="text-align: center">Name</th>
                    </tr>
                </thead>
              <tbody>
                    <% @goals.each do |goal|%>
                    <tr>
                      <!--Half-->
                      <td style="text-align: center">
                        <%= goal.period %>
                      </td>
                      <!--Time-->
                      <td style="text-align: right">
                        <%= goal.goal_min %> :
                        <%= goal.goal_sec %>
                      </td>
                      <!--G-->
                      <td style="text-align: center">
                        <%= goal.goal_member.jersey_number %>
                      </td>
                      <!--Name-->
                      <td>
                        <span><%= goal.goal_member.member_name %></span>
                      </td>
                      <!--A-->
                      <td style="text-align: center">
                        <% if goal.assist1_member.present? %>
                            <%= goal.assist1_member.jersey_number %>
                        <% end%>
                      </td>
                      <!--Name-->
                      <td>
                        <% if goal.assist1_member.present? %>
                            <span><%= goal.assist1_member.member_name %></span>
                        <% end%>
                      </td>
                      <!--A-->
                      <td style="text-align: center">
                        <% if goal.assist2_member.present? %>
                            <%= goal.assist2_member.jersey_number %>
                        <% end%>
                      </td>
                      <!--Name-->
                      <td>
                        <% if goal.assist2_member.present? %>
                            <span><%= goal.assist2_member.member_name %></span>
                        <% end%>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--// Goals Table-->


<!-- Penalty Table-->
<h4>Penalty summary</h4>
<div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                      <th style="text-align: center">Half</th>
                      <th style="text-align: center">#</th>
                      <th style="text-align: center">Name</th>
                      <th style="text-align: center">Time</th>
                      <th style="text-align: center">P.Time</th>
                      <th style="text-align: center">Penalty</th>
                    </tr>
                </thead>
                <tbody>

                <% @game_panalties.each do |penalty| %>
                    <tr>
                      <!--Half-->
                      <td style="text-align: center">
                        <%= penalty.period%>
                      </td>
                      <!--#-->
                      <td style="text-align: center">
                        <%= penalty.member.jersey_number %>
                      </td>
                      <!--Name-->
                      <td style="text-align: center">
                        <%= penalty.member.member_name %>
                      </td>
                      <!--Time-->
                      <td style="text-align: right">
                        <%= penalty.penalty_min %> :
                        <%= penalty.penalty_sec %>
                      </td>
                      <!--P.Time-->
                      <td style="text-align: right">
                        <%= penalty.penalty_time %>
                      </td>
                      <!--Penalty-->
                      <td>
                        <%= penalty.penalty.penalty_name %>
                      </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Penalty Table-->

