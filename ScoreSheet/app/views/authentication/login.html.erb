<%= form_tag auth_auth_login_path, :class => "form-signin" do %>
  <h2 class="form-signin-heading">Millennium Falcons</h2>
  <label for="inputEmail" class="sr-only">Email address</label>
    <%= text_field_tag :email, '',
                       {class:'form-control', placeholder: 'Email address', required: true, autofocus: true} %>
  <label for="inputPassword" class="sr-only">Password</label>
    <%= text_field_tag :passwd, '',
                       {class:'form-control', placeholder: 'Password', required: true} %>
    <!-- Result Message -->
    <h5 id="notice" style="color: red;" align="center"><%= notice %></h5>
    <!--// Result Message -->
    <p></p>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
<% end %>

<div>
  <div class="row">
    <div class="col-md-12" align="center">
      <%= link_to 'Score Sheet', score_sheet_index_path %>
    </div>
  </div>
</div>